div.alert.alert-warning.alert-dismissible.fade.in(role="alert" ng-show="wordGuess.word.$error.minlength")
	button(type="button" class="close" data-dismiss="alert" aria-label="Close")
		span(aria-hidden="true") Ã—
	strong Min 5 letter words!
form(name="wordGuess")
	fieldset(ng-disabled="$ctrl.guessCounter < 1")
		div.row
			div.col-md-6
				div.input-group
					input.form-control(type="text" minlength="5" ng-minlength="5" placeholder="Guess word" name="word" ng-model="$ctrl.word")
					span.input-group-btn
						button.btn.btn-default(ng-click="$ctrl.preWordCheck()") Go!
			div.col-md-6
				span {{$ctrl.guessCounter}} guesses left