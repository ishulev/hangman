doctype html
html(lang="en")
	head
		base(href="/")
		meta(charset = "utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title Hangman
		link(href="https://fonts.googleapis.com/css?family=PT+Sans:400,700|Merriweather:400,700" rel="stylesheet")
		link(rel="stylesheet" type="text/css" href="css/styles.css")
	body
		main.container(ng-controller="HangmanParentController")
			h1 Hangman
			button.btn.btn-warning(ng-click="multiplayer = !multiplayer") {{'Multiplayer' | singleOrNot:multiplayer}}
			new-game(multiplayer="multiplayer" categories="categories" set-category="setCategory(category)")
			p
				button.btn.btn-primary.btn-lg Start game
		script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js")
		script(type="text/javascript" src="js/scripts.js")